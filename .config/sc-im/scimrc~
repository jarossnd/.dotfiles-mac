#Set it to recalculate values automatically, or to '0' to do it manually upon execution of a '@' command.
set autocalc=1
set numeric=1
set numeric_decimal=0
set ignorecase=1

# Long strings/values overlap the next cells instead of turning into asterisks
set overlap

"color "type=WELCOME bold=0 standout=0 dim=0 reverse=0 underline=0 blink=0 fg=DEFAULT_COLOR bg=DEFAULT_COLOR"
"color "type=INPUT bold=0 standout=0 dim=0 reverse=0 underline=0 blink=0 fg=DEFAULT_COLOR bg=DEFAULT_COLOR"
"color "type=MODE bold=0 standout=0 dim=0 reverse=0 underline=0 blink=0 fg=DEFAULT_COLOR bg=DEFAULT_COLOR"
"color "type=HEADINGS bold=0 standout=0 dim=0 reverse=0 fg=DEFAULT_COLOR bg=RED"
"color "type=CELL_SELECTION bold=0 standout=0 dim=0 reverse=1 fg=DEFAULT_COLOR bg=GREEN"

# Dracula theme
REDEFINE_COLOR "WHITE" 248 248 242
